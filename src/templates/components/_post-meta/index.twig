{% set options = (craft.getWabiDefaultSettings.components['post-meta'])|merge(options|default({})) %}

{% set tags = tags is defined ? tags : false %}
{% set profile = profile is defined ? profile : false %}
{% set date = date is defined ? date : false %}

<div class="{{ craft.wabiClasses.components('container', options) }}">
    {% if options.profile and profile %}
    <div>
        {% block profile %}
            {{ wabiComponents({path: '_post-meta/profile.twig', profile, options}) }}
        {% endblock %}
    </div>
    {% endif %}
    {% if options.date and date %}
    <div>
        {% block date %}
            {{ wabiComponents({path: '_post-meta/date.twig', date, options}) }}
        {% endblock %}
    </div>
    {% endif %}

    {% if options.tags and tags %}
    <div>
        {% block tags %}
            {{ wabiComponents({path: '_post-meta/tags.twig', tags, options}) }}
        {% endblock %}
    </div>
    {% endif %}
</div>
