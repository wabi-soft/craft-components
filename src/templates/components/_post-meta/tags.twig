{% apply spaceless %}
{% set options = craft.getWabiDefaultSettings.components['post-meta']|merge(options|default({})) %}


{% if tags | length %}
<div class="{{ craft.wabiClasses.components('tags-container', options) }}">
    <strong class="{{ craft.wabiClasses.components('tags-label', options) }}">Tags:</strong>
    <ul class="flex gap-2">
    {% for tag in tags %}
        {% if tag is iterable %}
            <li class="{{ craft.wabiClasses.components('tags-tag', options) }}"><a href="{{ tag.url }}">{{ tag.title }}</a></li>
        {% else %}
            <li class="{{ craft.wabiClasses.components('tags-tag', options) }}">{{ tag }}</li>
        {% endif %}
    {% endfor %}
    </ul>
</div>
{% endif %}
{% endapply %}
